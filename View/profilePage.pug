extends base.pug  
append stylesheets
    link(rel="stylesheet" , href="./css/profile.css")
block content
    .parent-container
        .left-container
            .profile-img
                img(src=user.pImage alt='')
                input#profileImage(type='file' name='user')
            .profile-nav
                #profile-details.navlist-item
                    |Profile
                #order-history.navlist-item
                    |My Orders
                    .navitem-count #{orders.length}
                #review-history.navlist-item.no-border
                    |My Reviews
                    .navitem-count #{reviews.length}
        .right-container
            .profile-details
                .heading
                    h1 Personal Information
                hr
                .profile-data
                    label(for='') Name
                    input(type='text' placeholder='' readonly='' value=user.name)
                .profile-data
                    label(for='') Email
                    input(type='text' placeholder='' readonly='' value=user.email)
                .profile-data
                    label(for='') Delivery Address
                    input(type='text' placeholder='' readonly='' value=user.deliveryAddress)
                .profile-data
                    label(for='') Contact
                    input(type='text' placeholder='' readonly='' value=user.contact)
                .btn.edit-details Edit Details
                .profile-edit-btns
                    .btn.cancel.hide Cancel
                    .btn.save-details.hide Save Details
            .order-history.hide
                .heading
                    h1 Your Order History
                hr
                .orders
                    if orders.length>0
                        each order in orders
                            include orderCard.pug
                    else
                        h2 No Orders
            .review-history.hide
                .heading
                    h1 Your Reviews
                hr
                .reviews
                    if reviews.length>0
                        each review in reviews
                            include profileReviewCard.pug
                    else
                        h2 No Reviews

block scripts
    script(src="./js/profileImage.js")
    script(src="./js/profile.js")
    script(src="./js/editReviews.js")